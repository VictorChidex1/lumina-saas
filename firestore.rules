rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // 1. User Profiles: Users can only read/write their OWN data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // 2. Job Applications: Public can submit (create only)
    match /applications/{applicationId} {
      allow create: if true;
      allow read, update, delete: if false; // Admin only (future)
    }

    // 3. Default: Deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
