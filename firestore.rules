rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // 1. User Profiles: Users can only read/write their OWN data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // 2. Job Applications: Public can submit (create only), Admins can read
    match /applications/{applicationId} {
      allow create: if true;
      allow read: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      allow update, delete: if false; // Admin only (future)
    }

    // 3. Projects: Users can read/write their OWN projects
    match /projects/{projectId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // 3. Default: Deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
